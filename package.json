{
  "name": "tram",
  "description": "Boilerplate for building reactive isomorphic applications. Built around TypeScript, React, Apollo, MongoDB.",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/server.js",
  "scripts": {
    "build:client:vendor": "webpack --config webpack/client/vendor.ts",
    "build:client": "webpack --config webpack/client/index.ts",
    "build:server:vendor": "webpack --config webpack/server/vendor.ts",
    "build:server": "webpack --config webpack/server/index.ts",
    "build:vendor": "npm-run-all -p build:client:vendor build:server:vendor",
    "build:all": "npm-run-all build:vendor -p build:client build:server",
    "build": "npm-run-all -p build:client build:server",
    "start:db": "rethinkdb --http-port 8887",
    "start:client:hot": "node dist/server.hot.js",
    "start:server:hot:nodemon": "nodemon dist/server.js --watch dist/server.js",
    "start:server:hot": "npm-run-all -p start:server:hot:nodemon start:server:hot:webpack",
    "start:server:hot:webpack": "webpack --config webpack/server/index.ts --watch",
    "start:server": "node dist/server.js",
    "start:hot": "npm-run-all -p start:client:hot start:server:hot",
    "start": "npm-run-all build start:hot",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "clean": "npm-run-all -p clean:dist clean:coverage",
    "lint": "npm-run tslint \"src/**/**.ts*\" --force"
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "nyc --reporter=html ava",
    "report": "nyc report",
    "report:html": "open coverage/index.html",
  },
  "ava": {
    "files": [
      "src/**/?(*.)?(app-)+(test|spec)?(s).ts?(x)"
    ]
  },
  "dependencies": {
    "apollo-client": "^0.5.0",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "graphql": "^0.7.2",
    "graphql-server-express": "^0.4.3",
    "graphql-tag": "^0.1.15",
    "graphql-tools": "^0.8.0",
    "history": "^4.4.0",
    "lodash": "^4.16.6",
    "npm-run": "^4.1.0",
    "npm-run-all": "^3.1.1",
    "react": "^15.3.2",
    "react-apollo": "^0.5.16",
    "react-dom": "^15.3.2",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "rethinkdb": "^2.3.3",
    "thinky": "^2.3.7",
    "validator": "^6.1.0"
    "ts-node": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "awesome-typescript-loader": "^3.0.0",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "^0.26.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "isomorphic-style-loader": "^1.1.0",
    "json-strip-loader": "^1.0.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "redux-logger": "^2.7.4",
    "rimraf": "^2.5.4",
    "serve-favicon": "^2.3.0",
    "tslint": "^3.15.1",
    "tslint-react": "^1.1.0",
    "typings": "^1.5.0",
    "sass-loader": "^6.0.0",
    "source-map-loader": "^0.1.0",
    "style-loader": "^0.13.0",
    "typescript": "^2.2.0",
    "url-loader": "^0.5.0",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.3.0",
    "webpack-dev-middleware": "^1.8.0",
    "webpack-dev-server": "^2.1.0-beta.10",
    "webpack-hot-middleware": "^2.13.0",
    "webpack-manifest-plugin": "^1.0.0"
  },
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/TRAM/issues"
  },
  "repository": {
    "type": "git",
